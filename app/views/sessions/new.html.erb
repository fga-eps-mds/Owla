<% @title = "Login" %>
<section class="initial-page content-header">

  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="login-tmp-box col-md-6">
      <div class="login-box">
        <div class="login-box-body">
          <p class="login-box-msg">Start your session</p>

          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group has-feedback">
              <%= f.email_field :email, class:  'form-control', placeholder: 'Email', autofocus: true %>
              <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
              <%= f.password_field :password, class: 'form-control', placeholder:'Password' %>
              <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
              <div class="col-md-8">
              </div>

              <div class="col-md-4">
                <%= f.submit 'Enter', class: 'btn btn-primary btn-block btn-flat' %>
              </div>
            </div>
          <% end %>

          <%= link_to 'Register yourself', new_member_path, class: "text-center" %>

        </div>
      </div>
    </div>

    <div class="col-md-3">
    </div>
  </div>
</section>
