<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Topic
    <small><%= @subtitle %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Topic</li>
  </ol>
</section>


<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-7">
      <!-- general form elements disabled -->
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title"><%= @box_title %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_for @topic, url: { controller: 'topics', action: 'create' } do |f| %>
            <!-- text input -->
            <div class="form-group">
              <%= f.text_field :name, class:"form-control", placeholder: @placeholder_name %>
            </div>
            <!-- textarea -->
            <div class="form-group">
              <%= f.text_area :description, class:"form-control", placeholder: @placeholder_description %>
            </div>
            <!-- filefield -->
            <div class="form-group">
              <%= f.file_field :slide, class:"form-control" %>
            </div>
            <%= button_tag(type: "submit", class: "btn btn-app pull-right") do %>
                <i class="fa fa-save"></i>
            <% end %>
          <% end %>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
      <div class="input-group margin">
        <div class="input-group-btn">
          <!-- FIXME change this condition -->
          <% if @topic.valid? %>
            <%= button_to "Delete Topic", topic_path(@topic), class: "btn btn-flat btn-danger", data: { confirm: "Hmmm! Are you sure?" }, method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
    <!--/.col (right) -->
  </div>
</section>
